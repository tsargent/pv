<div id="stories_show">
	<div class="row">
		<div class="col-md-12">
			<header id="story_header">
			</header>
		</div>
	</div>

	<div class="row">
		<div class="col-md-3">
			<aside id="sidebar_1">
				<%= circle_hands_thumb(@story) %>
				<%= simple_format @story.excerpt, class: 'excerpt lead' %>
				<%= simple_format excerpt_location(@story) %>
				<%= simple_format(format_date @story.created_at) %>
			</aside>
		</div>
		<div class="col-md-6">
			<article><%= simple_format @story.edit %></article>
		</div>
		<div class="col-md-3">
			<nav>
				<%= link_next_with_excerpt(@story) %>
				<hr/>
				<%= link_prev_with_excerpt(@story) %>

			</nav>
		</div>

	</div>

</div>