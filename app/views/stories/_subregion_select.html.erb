<div id="story_state_wrapper">
  <% parent_region ||= params[:parent_region] %>
  <% country = Carmen::Country.coded(parent_region) %>

  <% if country.nil? %>
    <em>Please select a country</em>
  <% elsif country.subregions? %>
    <%= subregion_select(:story, :state, parent_region, {}, {class: 'form-control'}) %>
  <% else %>
    <%= text_field(:story, :state, class: 'form-control') %>
  <% end %>
</div>