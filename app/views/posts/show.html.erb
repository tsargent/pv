<div id="stories_show">
	<div class="row">
		<div class="col-md-12">
			<header id="story_header">
			</header>
		</div>
	</div>

	<div class="row">
		<div class="col-md-3">
			<aside id="sidebar_1">
			</aside>
		</div>
		<div class="col-md-6">
			<p class=""><small><%= @post.created_at.strftime("%b %d, %Y") %></small></p>
			<h3><%= @post.title %></h3>
			<% unless @post.photo.blank? %>
			<div class="photo_container">
			<%= image_tag @post.photo.url(:medium), class: 'post-photo' %>
			<p class="help-block"><%= @post.photo_caption %></p>
			</div>
			<% end %>

			<article><%= simple_format(@post.body, {}, sanitize: false) %></article>
		</div>
		<div class="col-md-3">
			<nav>

				<ul class="list list-unstyled">
					<li>
						<%= link_next_post(@post) %>
					</li>
					<li>
						<%= link_prev_post(@post) %>

					</li>
				</ul>
			</nav>
		</div>

	</div>

</div>