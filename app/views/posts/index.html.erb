
<div id="posts_index">
	<div class="row">

		<div class="col-md-2">
			<aside id="sidebar_1">
			</aside>
		</div>


		<div class="col-md-8">
			<% @posts.each do |post| %>
				<div class="post">
					<p class="small"><%= post.created_at.strftime("%b %d, %Y") %></p>
					<h2><%= link_to post.title, post %></h2>
					<% unless post.photo.blank? %>
						<div class="photo_container">
							<%= image_tag post.photo.url(:medium), class: 'post-photo' %>
							<p class="help-block"><%= post.photo_caption %></p>
						</div>
					<% end %>
					<%= simple_format post.body %>
				</div>
				<hr/>
			<% end %>
		</div>

		<div class="col-md-2">
			<aside id="sidebar_1">
			</aside>
		</div>

	</div>
</div>
