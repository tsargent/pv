<%= form_for([:admin, @post]) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="field">
        <%= f.label :display %>
        <%= f.check_box :display %>
      </div>
    </div>
  </div>
  <hr/>
  <div class="row">
    <div class="col-md-6">
      <div class="field">
          <%= f.label :photo %>
          <%= f.file_field :photo %>
      </div>
      <div class="field">
          <%= f.label :photo_caption %>
          <%= f.text_area :photo_caption, class: 'form-control' %>
      </div>

    </div>

  </div>
  <hr/>
  <div class="row">
    <div class="col-md-6">
      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

    </div>
    <div class="col-md-6">
      <div class="field">
        <%= f.label :body %><br>
        <%= f.text_area :body, class: 'form-control', rows: 10 %>
      </div>
    </div>
  </div>



  <div class="row">
    <div class="col-md-12">

  <div class="actions">
    <%= f.submit class: 'btn btn-default' %>
  </div>

    </div>

  </div>


  
<% end %>
