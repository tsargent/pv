<h1>Listing Stories</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Excerpt</th>
      <th>Display</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stories.each do |story| %>
      <tr>
        <td><%= story.excerpt %></td>
        <td><%= story.display %></td>
        <td><%= link_to 'Show', [:admin, story] %></td>
        <td><%= link_to 'Edit', edit_admin_story_path(story) %></td>
        <td><%= link_to 'Destroy', [:admin, story], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

